<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.comp2059.app.controller.SecondStageController">

   <ImageView fitHeight="720.0" fitWidth="1200.0" pickOnBounds="true">
      <Image url="@../img/background/background.png" />
   </ImageView>

   <Button fx:id="btnPlay" layoutX="888.0" layoutY="540.0" mnemonicParsing="false" onMouseClicked="#clickPlay"
           onMouseEntered="#enterPlay" onMouseExited="#existPlay" prefHeight="15.0" prefWidth="33.0" scaleX="6.0" scaleY="4.0"
           stylesheets="@../css/style.css" text="Go!" textFill="YELLOW" />
   <Button fx:id="btnBack" layoutX="264.0" layoutY="540.0" mnemonicParsing="false" onMouseClicked="#clickBack"
           onMouseEntered="#enterBack" onMouseExited="#existBack" prefHeight="15.0" prefWidth="33.0" scaleX="6.0" scaleY="4.0"
           stylesheets="@../css/style.css" text="Back" textFill="YELLOW" />

   <TextField fx:id="textName" alignment="CENTER" layoutX="450.0" layoutY="304.0" opacity="0.85"
              prefHeight="80.0" prefWidth="300.0" promptText="Please input your name">
      <style>-fx-background-color: gray;</style>
      <font>
         <Font size="20.0" />
      </font>
   </TextField>

   <ImageView fitHeight="206.0" fitWidth="574.0" layoutX="293.0" layoutY="82.0" pickOnBounds="true" preserveRatio="true">
      <Image url="@../img/others/downWindow.png" />
   </ImageView>
   <ImageView fitHeight="151.0" fitWidth="506.0" layoutX="437.0" layoutY="9.0" pickOnBounds="true" preserveRatio="true">
      <Image url="@../img/text/ready.png" />
   </ImageView>
   <ImageView fx:id="dice" fitHeight="60.0" fitWidth="64.0" layoutX="764.0" layoutY="314.0" onMouseClicked="#clickDice"
              onMouseEntered="#enterDice" onMouseExited="#exitDice" pickOnBounds="true" preserveRatio="true">
      <Image url="@../img/others/dice.png" />
   </ImageView>

</AnchorPane>
